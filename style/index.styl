.post
    .panel-default
        margin: 0px;

.editor
    width: 100%;
    height: 120px;
    background: white;

.form-control
    resize: none;

.post-heading
    background-color: rgba(52, 152, 219, 1)!important;
    color: white!important;

.post-body
    background-color: white;

.post-stream
    margin: 0px;
    margin-top: 120px;

.origin
    float: right;

.editor-actions-container
    position: relative;

.plugins-list
    width: auto;
    overflow: hidden;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    margin: 2px;

.post-button
    width: 70px;
    float: right;
    margin: 5px;

.loading
    width: 100px;
    height: 100px;
    position: absolute;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
